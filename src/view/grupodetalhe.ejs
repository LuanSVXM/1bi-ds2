<body>
    <header>

        <img src="../../img/logo.png" alt="logo" />


    </header>

    <main>

        <div class="containerbtnadicionarmembro">
            <a class="btnadicionargrupo" href="/grupos/addmembro">
                <span> Adicionar membro </span>
                <i class="bi bi-plus"></i>
            </a>

            <div>

                <div>
                    <span>Ver Mensagens:</span>
                    <i class="bi bi-check-lg"></i>
                </div>

                <div>
                    <span>Mandar Mensagens:</span>
                    <i class="bi bi-x-lg"></i>

                </div>


            </div>
        </div>


        <div class="containermsg">
            
            <div class="headerchat">

                <div title="Nome do grupo que pode ser extremamente grande por acaso"><span>Nome do grupo que pode ser extremamente grande por acaso</span></div>

                <div title="Sair do Grupo"><i class="bi bi-x-lg"></i></div>

            </div>


            <div class="mainmensagens"> 




            </div>




            <div class="footerchat">

               <form>

                <input type="text" name="msg" />


                <button type="submit"><i class="bi bi-send"></i></button>



               </form>

            </div>   




        </div>











    </main>

